<?xml version="1.0" encoding="utf-8"?>
<mx:Application 
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:html="com.htmlFilter.*"
	width="100%" height="100%" 
	creationComplete="setTheData()"
	verticalAlign="middle" horizontalAlign="center"
	>

	<mx:Style source="assets/css/styles.css"/>

	<mx:Script>
		<![CDATA[
			import com.htmlFilter.htmlFilter;
			import flash.events.*;
   			import flash.net.URLLoader;
		    import flash.net.URLRequest;
		    
			private var theText:String = "";
			
			private var theHtmlFilter:htmlFilter = new htmlFilter();
			
			private function setTheData ():void
			{
		        var request:URLRequest = new URLRequest("file:assets/content/tester.txt");
		        var loader:URLLoader = new URLLoader();
		        loader.addEventListener(Event.COMPLETE, gotData);
		        loader.load(request);
		        
		    }
		
			private function gotData(event:Event):void
			{
				var loader2:URLLoader = URLLoader(event.target);
				Txt = theHtmlFilter.filterContent(loader2.data);
			}
			
			[Bindable]
			private function get Txt():String
			{
				return theText;
			}
			private function set Txt(inText:String):void
			{
				trace(inText);
				theText = inText;
			}
        ]]>
    </mx:Script>     
	
	<mx:HBox width="80%" height="80%" styleName="plain">
		<html:htmlText text="{Txt}" 
			width="100%" height="100%" cssFile="file:assets/css/html.css"/>
	</mx:HBox>

</mx:Application>
